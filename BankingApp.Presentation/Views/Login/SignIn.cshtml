@model SignInDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="Bank, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/BankingApp/img/favicon.png">

    <title>Bank</title>

    <!-- Bootstrap core CSS -->
    <link href="~/BankingApp/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/BankingApp/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/BankingApp/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/BankingApp/css/style.css" rel="stylesheet">
    <link href="~/BankingApp/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-body">

    <div class="container">

        <form class="form-signin" method="post">
            <h2 class="form-signin-heading">Oturum Aç</h2>
            <div class="login-wrap">
                <input type="text" class="form-control" placeholder="Kullanıcı Adınız" asp-for="UserName" autofocus>
                <span asp-validation-for="UserName" class="text-danger"></span>

                <input type="password" class="form-control" placeholder="Şifre" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>

                <label class="checkbox">
                    <input type="checkbox" value="remember-me"> Beni Hatırla
                    <span class="pull-right">
                        <a data-toggle="modal" href="#myModal"> Şifremi Unuttum</a>
                    </span>
                </label>
                <button class="btn btn-lg btn-login btn-block" type="submit">Devam</button>
                <div class="registration">
                    Henüz bir hesabınız yok mu?
                    @Html.ActionLink("Hemen Kayıt Ol!","SignUp","Register")
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Modal -->
            <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Şifremi Unuttum!</h4>
                        </div>
                        <div class="modal-body">
                            <p>Lütfen şifrenizi yenilemek için E-mail adresinizi giriniz</p>
                            <input type="email" name="email" placeholder="E-mail" autocomplete="off" class="form-control placeholder-no-fix">

                        </div>
                        <div class="modal-footer">
                            <button data-dismiss="modal" class="btn btn-default" type="button">İptal</button>
                            <button class="btn btn-success" type="button">Gönder</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- modal -->
        </form>
    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/BankingApp/js/jquery.js"></script>
    <script src="~/BankingApp/js/bootstrap.min.js"></script>
</body>
</html>

